class Solution:
    def check(self, nums: List[int]) -> bool:
        i = 0
        count = 0
        for i in range(len(nums)):
            if nums[i] > nums[(i+1)%len(nums)]:
                count += 1
            else:
                i += 1
        if count == 0 or count == 1:
            return True
        else:
            return False
