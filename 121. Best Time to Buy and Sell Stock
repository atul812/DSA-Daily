class Solution {
    public int maxProfit(int[] prices) {
        if (prices == null || prices.length < 2) {
            return 0; 
        }

        int minPrice = prices[0];
        int maxProfit = 0;

        for (int j = 1; j < prices.length; j++) {
            if (prices[j] < minPrice) {
                minPrice = prices[j]; 
            } else {
                maxProfit = Math.max(maxProfit, prices[j] - minPrice); 
            }
        }

        return maxProfit;
    }
}
